alert: TempoRetentionsFailing
expr:  sum(increase(tempodb_retention_errors_total{}[1h])) > 2 and sum(increase(tempodb_retention_errors_total{}[5m])) > 0
"for": "5m"
labels:
  severity: critical
annotations:
  summary: Tempo retentions failing (instance {{ $labels.instance }})
  description: "The {{ $labels.job }} is experiencing more than 2 retention failures in the past hour.\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"