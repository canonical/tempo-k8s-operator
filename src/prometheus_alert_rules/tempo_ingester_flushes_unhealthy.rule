alert: TempoIngesterFlushesUnhealthy
expr: sum(increase(tempo_ingester_failed_flushes_total[1h])) > 2 and sum(increase(tempo_ingester_failed_flushes_total[5m])) > 0
for: 5m
labels:
  severity: warning
annotations:
  summary: Tempo ingester flush failing (instance {{ $labels.instance }})
  description: "The {{ $labels.job }} is experiencing more than 2 ingester flush failures in the past hour.\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"