alert: TempoIngesterFlushesFailing
expr: sum(increase(tempo_ingester_flush_failed_retries_total{}[1h])) > 2 and sum(increase(tempo_ingester_flush_failed_retries_total{}[5m])) > 0
for: 5m
labels:
  severity: critical
annotations:
  summary: Tempo ingester flush retries failing (instance {{ $labels.instance }})
  description: "The {{ $labels.job }} is experiencing more than 2 flush retries failures in the past hour.\n  VALUE = {{ $value }}\n  LABELS = {{ $labels }}"